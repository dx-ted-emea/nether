    // MongoDB - local server
    "factory": {
      "type": "Nether.Data.MongoDB.Leaderboard.MongoDBLeaderboardStoreConfigurationFactory",
      "assembly": "Nether.Data.MongoDB"
    },
    "properties": {
      "ConnectionString": "mongodb://localhost:27017",
      "DatabaseName": "leaderboard"
    }

