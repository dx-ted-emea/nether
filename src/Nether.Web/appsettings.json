{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "LeaderboardStore": {
    // TODO - support "implementation" approach as well as factory
    //  "implementation": {
    //    "type": "Nether.Data.InMemory.Leaderboard.InMemoryLeaderboardStore",
    //    "assembly": "Nether.Data.InMemory.Leaderboard"
